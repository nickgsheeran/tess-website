---
layout: 'base.njk'
permalink: "/{{ title | slugify }}/"
---

<figure class="main-article__figure">
{% if fVideoB %}
  <video playsinline loop="loop" autoplay="autoplay" muted poster="{{snipImg}}">
    {% if fWmSrc %}
      {{WmSrc | replace("src", "")}}
      <source src="{{WmSrc}}" type="video/webm">
    {% endif %}
    <source src="{{fSrcb | replace("src", "")}}" type="video/mp4">
  </video>
  {% else %}
  {% Image "./src/"+snipImg, snipImgAlt %}
  {% endif %}
</figure>

<article class="container">

<section class="pGrid">
  <div class="article-intro">
    <h1 class="article-title">
      {{ title }}
    </h1>
    <p>
      {{ description }}
    </p>
    <div class="intro-details">
      <h2 id="disc">
        {{ disc }}
      </h2>
      <p>
        {{ collabs }}
      </p>
    </div>
  </div>
</section>

  {{ content | safe }}
  <section class="pGrid article-images">
    {%- for theImage2 in images -%}
      <div class="{{theImage2.imgRow.mSize}} {{theImage2.imgRow.layout}}">
        {%- for eachImage2 in theImage2.imgRow.imageRowContents -%}
          {% if eachImage2.videoB %}
            <video playsinline muted loop="loop" autoplay="autoplay" poster="{{eachImage2.pSrc | replace("src", "")}}">
              {% if eachImage2.fWmSrc %}
                <source src="{{eachImage2.wmSrc | replace("src", "")}}" type="video/webm">
              {% endif %}
              <source src="{{eachImage2.srcb | replace("src", "")}}" type="video/mp4">
            </video>
            {% else %}
            {% Image "./"+eachImage2.srcb, imageAlt  %}
          {% endif %}
        {%- endfor -%}
      </div>
    {%- endfor -%}
    {% set thetitles = [] %}
    {% for post in collections.post | reverse %}
      {% set thetitles = thetitles.concat(post.data.title) %}
    {% endfor %}
    {% set i = 0 %}
    {% set j = 0 %}
    {% for post in thetitles %}
      {% set i = i + 1 %}
      {% if title == post %}
      {% set j = i %}
      {% endif %}
    {% endfor %}
    {%set sorted = collections.post | reverse%}
    <a href="{{sorted[j].url}}" id="nextBtn">Next Article</a> 
  </section>


</article>