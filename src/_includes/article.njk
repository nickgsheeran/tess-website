---
layout: 'base.njk'
permalink: "/{{ title | slugify }}/"
---

<article class="main-article">
<div class="container flow">
  
  <figure class="main-article__figure">
    {% Image "./src/"+image, imageAlt  %}
  </figure>

  <section class="article-intro">
    <h1 class="article-title">
      {{ title }}
    </h1>
    <p>
      {{ description }}
    </p>
    <div class="intro-details">
      <h2 id="disc">
        {{ disc }}
      </h2>
      <p>
        {{ collabs }}
      </p>
    </div>
  </section>

  {{ content | safe }}

{# the working non-video stuff is in your notes #}
    {%- for imager in images -%}
      {%set imgP = imager.src %}
      {%set webM = imager.src2 %}
      {% if imager.videoB %} 
        hello video
        {% if imager.src2 != undefined %} 
          <video poster="{{imager.pSrc}}" playsinline="" loop="loop" autoplay="autoplay" muted="muted">
            <source src="{{ webM }}" type="video/webm">
            <source src="{{ imgP }}" type="video/mp4">
          </video>
        {% else %}
          <video poster="{{imager.pSrc}}" playsinline="" loop="loop" autoplay="autoplay" muted="muted" src="{{ imgP }}"></video>
        {% endif %}

      {% else %}
        {# hello image #}
        {%set imgA = imager.alt %}
        {% Image imgP, imgA  %}
      {% endif %}

    {%- endfor -%}
    {# asdf #}

</div>
</article>
