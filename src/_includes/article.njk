---
layout: 'base.njk'
permalink: "/{{ title | slugify }}/"
---

<figure class="main-article__figure">
  {% Image "./src/"+image, imageAlt %}
</figure>

<article class="container">

<section class="pGrid">
  <div class="article-intro">
    <h1 class="article-title">
      {{ title }}
    </h1>
    <p>
      {{ description }}
    </p>
    <div class="intro-details">
      <h2 id="disc">
        {{ disc }}
      </h2>
      <p>
        {{ collabs }}
      </p>
    </div>
  </div>
</section>

  {{ content | safe }}
  <section class="pGrid article-images">
    {%- for theImage2 in images -%}
      <div class="{{theImage2.imgRow.mSize}} {{theImage2.imgRow.layout}}">
        {%- for eachImage2 in theImage2.imgRow.imageRowContents -%}
          {% if eachImage2.videoB %}
            <video playsinline="" loop="loop" autoplay="autoplay" muted="muted" poster="./{{eachImage2.pSrc}}">
            {% if eachImage2.fWmSrc %}
              <source src="./{{eachImage2.wmSrc}}" type="video/webm">
              {% endif %}
            <source src="./{{eachImage2.srcb}}" type="video/mp4">
            </video>
            {% else %}
            {% Image "./"+eachImage2.srcb, imageAlt  %}
          {% endif %}
        {%- endfor -%}
      </div>
    {%- endfor -%}
  </section>

</article>
