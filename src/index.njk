<section class="articles">
  <div class="container flow">
    <ul role="list" class="articles__list flow">
      {%- for post in collections.post | reverse -%}
        <li>
          {% if post.data.fVideoB %}
            <a href="{{ post.url }}" class="hero-parent">
              <video playsinline loop="loop" autoplay="autoplay" muted poster="{{post.data.snipImg}}">
                {% if fWmSrc %}
                  <source src="{{post.data.WmSrc | replace("src", "")}}" type="video/webm">
                {% endif %}
                {{post.data.fSrcb | replace("src", "")}}
                <source src="{{post.data.fSrcb | replace("src", "")}}" type="video/mp4">
              </video>
            </a>
            {% else %}
            <a href="{{ post.url }}">
              {% Image "./src/"+post.data.snipImg, post.data.snipImgAlt, "" %}
            </a>
            {% endif %}
          {% include 'article-snippet.njk' %}
        </li>
      {%- endfor -%}
    </ul>
  </div>
</section> 

